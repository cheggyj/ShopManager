# ====================
# SHOP MANAGER LOCAL DEV
# ====================

# Development Environment
NODE_ENV=development
EXPO_PUBLIC_APP_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=Shop Manager
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.shopmanager.app

# API Configuration (Local development)
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# Database Configuration (Local)
EXPO_PUBLIC_DB_NAME=ShopManagerDB
EXPO_PUBLIC_DB_VERSION=1

# Authentication - Firebase (OPTIONAL - Leave empty for local-only mode)
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
EXPO_PUBLIC_FIREBASE_APP_ID=
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Authentication - Supabase (OPTIONAL - Alternative to Firebase)
EXPO_PUBLIC_SUPABASE_URL=
EXPO_PUBLIC_SUPABASE_ANON_KEY=

# Payment Processing - RevenueCat (OPTIONAL - For premium features)
EXPO_PUBLIC_REVENUECAT_API_KEY_IOS=
EXPO_PUBLIC_REVENUECAT_API_KEY_ANDROID=

# Payment Processing - Stripe (OPTIONAL - Alternative to RevenueCat)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Cloud Storage (OPTIONAL - For premium features)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=
EXPO_PUBLIC_CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Analytics (OPTIONAL)
EXPO_PUBLIC_MIXPANEL_TOKEN=
EXPO_PUBLIC_AMPLITUDE_API_KEY=

# Feature Flags (Enable/Disable features for development)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_CLOUD_SYNC=false
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_CAMERA=true

# Development Settings
EXPO_PUBLIC_ENABLE_DEV_MENU=true
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Subscription Plans (For testing premium features)
EXPO_PUBLIC_PREMIUM_MONTHLY_PRODUCT_ID=premium_monthly
EXPO_PUBLIC_PREMIUM_YEARLY_PRODUCT_ID=premium_yearly

# Currency & Localization
EXPO_PUBLIC_DEFAULT_CURRENCY=USD
EXPO_PUBLIC_DEFAULT_LOCALE=en-US
EXPO_PUBLIC_DEFAULT_TIMEZONE=America/New_York

# Security (Generate your own keys for production)
EXPO_PUBLIC_ENCRYPTION_KEY=dev_encryption_key_32_characters
EXPO_PUBLIC_JWT_SECRET=dev_jwt_secret_for_local_auth

# Backup & Export
EXPO_PUBLIC_MAX_BACKUP_SIZE_MB=50
EXPO_PUBLIC_EXPORT_EMAIL_TEMPLATE=default

# Performance
EXPO_PUBLIC_IMAGE_CACHE_SIZE_MB=100
EXPO_PUBLIC_DB_CACHE_SIZE_MB=50

# Third-party Integrations (OPTIONAL)
EXPO_PUBLIC_QUICKBOOKS_CLIENT_ID=
EXPO_PUBLIC_XERO_CLIENT_ID=

# Notifications (OPTIONAL)
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=

# Error Reporting (OPTIONAL)
EXPO_PUBLIC_SENTRY_DSN=