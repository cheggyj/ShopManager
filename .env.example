# ====================
# SHOP MANAGER ENV VARS
# ====================

# Development Environment
NODE_ENV=development
EXPO_PUBLIC_APP_ENV=development

# App Configuration
EXPO_PUBLIC_APP_NAME=Shop Manager
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_BUNDLE_ID=com.shopmanager.app

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# Database Configuration (Local)
EXPO_PUBLIC_DB_NAME=ShopManagerDB
EXPO_PUBLIC_DB_VERSION=1

# Authentication - Firebase (Optional for Premium)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Authentication - Supabase (Alternative to Firebase)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Payment Processing - RevenueCat (Recommended)
EXPO_PUBLIC_REVENUECAT_API_KEY_IOS=your_ios_revenuecat_key
EXPO_PUBLIC_REVENUECAT_API_KEY_ANDROID=your_android_revenuecat_key

# Payment Processing - Stripe (Alternative)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Cloud Storage (for premium features)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
EXPO_PUBLIC_CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Analytics (Optional)
EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_key

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=true
EXPO_PUBLIC_ENABLE_CLOUD_SYNC=true
EXPO_PUBLIC_ENABLE_BIOMETRICS=true
EXPO_PUBLIC_ENABLE_CAMERA=true

# Development Settings
EXPO_PUBLIC_ENABLE_DEV_MENU=true
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Subscription Plans
EXPO_PUBLIC_PREMIUM_MONTHLY_PRODUCT_ID=premium_monthly
EXPO_PUBLIC_PREMIUM_YEARLY_PRODUCT_ID=premium_yearly

# Currency & Localization
EXPO_PUBLIC_DEFAULT_CURRENCY=USD
EXPO_PUBLIC_DEFAULT_LOCALE=en-US
EXPO_PUBLIC_DEFAULT_TIMEZONE=America/New_York

# Security
EXPO_PUBLIC_ENCRYPTION_KEY=your_32_character_encryption_key
EXPO_PUBLIC_JWT_SECRET=your_jwt_secret_for_cloud_auth

# Backup & Export
EXPO_PUBLIC_MAX_BACKUP_SIZE_MB=50
EXPO_PUBLIC_EXPORT_EMAIL_TEMPLATE=default

# Performance
EXPO_PUBLIC_IMAGE_CACHE_SIZE_MB=100
EXPO_PUBLIC_DB_CACHE_SIZE_MB=50

# Third-party Integrations (Optional)
EXPO_PUBLIC_QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
EXPO_PUBLIC_XERO_CLIENT_ID=your_xero_client_id

# Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your_expo_push_key

# Error Reporting
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project